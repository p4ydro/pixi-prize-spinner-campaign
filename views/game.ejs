<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Via Spinner</title>

    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
    <link rel="stylesheet" href="stylesheets/fonts.css">
    <link rel="stylesheet" href="stylesheets/style.css">
    <link rel="stylesheet" href="stylesheets/game.css">
    <script src="code/tink.js"></script>
    <script src="code/pixi.js"></script>
    <script src="code/jquery-3.3.1.min.js"></script>
    <link rel="icon" href="images/favicon.ico">

    <script>
        var smsSent = false;
        $(document).ready(function() {
            $('.text-code-link').click(function(e) {
                console.log("Clicked");
                $('.prompt-container .text-phone-form').fadeIn(300);
                $('.prompt-container .text-phone-form').css('display','block');
            });
        });

        function sendSMS() {
            if (smsSent) return;

            smsSent = true;
            console.log("SMS Sent.");
            $('.text-code-link').fadeOut(300);
            $('.prompt-container .text-phone-form').fadeOut(300);
        }
    </script>

</head>
<body>

    <noscript>
        <div class="noscript">You must enable JavaScript in your browser settings in order to participate in this game.</div>
    </noscript>

    <script data-main="code/Main.js" src="requirejs/require.js"></script>

    <div class="background-holder"></div>

    <div class="loading-overlay">
        <div class="text-section">
            <h1 class="loading-text">
                <i class="fas fa-spinner loading-icon fa-spin"></i>
                Loading...
            </h1>
        </div>
    </div>

    <div id="main">

        <div class="game-overlay">

            

            <div class="button-section">
                <button class="spin-button">Spin</button>
                <div class="spin-text">
                    <h2 class="seconds-text">Prizes are seconds away...</h2>
                    <h2 class="spinning-text">Spinning...</h2>
                </div>
            </div>
        </div>

        <div class="darkener"></div>
        
        <div class="prompt-container">
            <!-- <div class="prompt-transparency-wrapper"> -->
                <div class="prize-section">
                    <h1>50% Off</h1>
                </div>
                <!-- <div class="shine-image">
                    <img class="shine-piece" src="images/Game/shine.png">
                </div> -->
                <div class="description-section">

                    <h1 class="prize-text">You've won 50% off your first 5 rides!</h1>
                    <h2>Use code</h2>

                    <div class="code-container">
                        <h1 class="reward-code-text">XYZ123</h1>
                    </div>

                    <div class="links-container">
                        <div class="button-container">
                            <a href="http://download?promo_code=">
                                <button class="download-button">Download and redeem</button>
                            </a>
                        </div>

                        <a class="text-code-link">
                            Text me the code
                            <span class="border-piece"></span>
                        </a>
                        <form class="text-phone-form" onsubmit="sendSMS();return false">
                            <input type="tel" id="phone" name="phone" class="phone-input" placeholder="1234567890"
                                    pattern="[0-9]{3}[0-9]{3}[0-9]{4}"
                                    required>
                            <button type="submit" class="submit-button">Send</button>
                        </form>
                    </div>

                <!-- </div> -->
            </div>
        </div>
    </div>

</body>
</html>